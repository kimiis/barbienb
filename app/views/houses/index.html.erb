<div class="container d-flex m-1 gap-2">

<div class="container d-flex gap-2">
  <% @houses.each do |house| %>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag house.images[0].key %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to(house.name, house_path(house.id )) %></h5>
        <p class="card-text"><%= house.description %></p>
        <%= link_to("Voir plus", house_path(house.id), class: "btn btn-primary")%>
      </div>
    </div>
  <% end %>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

