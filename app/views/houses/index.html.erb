
<div class="container-home">
  <div class="card container" data-controller="redirect-to-show">
    <% @houses.each do |house| %>
       <div class="card" data-url="<%= house_path(house.id) %>">
        <%= cl_image_tag house.images[0].key, data: { action: "click->redirect-to-show#navigate" } %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to(house.name, house_path(house.id )) %></h5>
          <p><%= house.user.username %></p>
          <p><%= house.price%> â‚¬/nuit</p>
        </div>
      </div>
    <% end %>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
