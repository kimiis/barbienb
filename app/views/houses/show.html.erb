
<h1><%= @house.name %></h1>

<div class="container-house-image">
  <%# <div class="container"> %>
    <% if @house.images.attached? %>
      <% @house.images.each do |image| %>
        <div class="image">
          <%= cl_image_tag(image.key, class: "carrousel-image-booking") %>
        </div>
      <% end %>
    <% end %>
  </div>
<%# </div> %>


<div class="house-container">

  <div class="house-container-description">

    <div class="house-address">
      <div> <%= @house.address %> </div>
    </div>

    <div class="span-house">

        <span class="house-guest">
          <%= @house.guest %> Guest
        </span>

        <span class="house-bedroom">
          <%= @house.bedroom %> Bedroom
        </span>

        <span class="house-bed">
          <%= @house.bed %> Bed
        </span>

        <span class="house-bath">
          <%= @house.bath %> Bath
        </span>

        <span class="house-pet">
          <%= @house.pet %> Pet
        </span>
    </div>

    <div class=".house-description">
        <%= content_tag :div, @house.description, class: "description-text" %>  
    </div>

    </div>

    <div class="card-booking"  data-controller="display-booking-price" >
      <%= render 'bookings/form', house: @house, booking: @booking %>
    </div>

</div>
