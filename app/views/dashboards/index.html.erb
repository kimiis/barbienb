<%# <h3>DASHBOARD</h3> %>
<%# utiliser current_user %>

<div class="container" data-controller="dashboard">

<div id="btn-bar">
  <button class="btn active toggle-button" data-dashboard-target="bookingsBtn" data-action="click->dashboard#setActiveBookings"><i class="fa-solid fa-calendar-check"></i> Reservations </button>
  <button class="btn toggle-button" data-dashboard-target="housesBtn" data-action="click->dashboard#setActiveHouses"><i class="fa-solid fa-house-circle-check"></i> Houses</button>
</div>

<%# bookings %>
<div id="div1" class= "content show" data-dashboard-target="bookingsContainer">
<div class="d-flex gap-2">
  <% @bookings.each do |booking| %>
    <%= render 'bookings/booking', booking: booking %>
  <% end %>
</div>
</div>

<%# houses %>
<div id="div2" class="content" data-dashboard-target="housesContainer">
<div class="d-flex gap-2">
  <% @houses.each do |house| %>
    <%= render 'dashboards/house', house: house %>
  <% end %>

</div>

</div>
